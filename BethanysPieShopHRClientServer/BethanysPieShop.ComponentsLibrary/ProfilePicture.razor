@inherits ProfilePictureBase
<div class="profile">
    <div class="profile-bg">
        <img class="img-responsive" src="_content/BethanysPieShopHRM.Server/images/profilePicture.jpg" />
    </div>
    <div class="profile-picture">
        <img class="img-responsive @CssClass account-photo"
             src="_content/BethanysPieShopHRM.Server/images/profilePicture.jpg"
             @onclick="PictureClick" />
        <div class="mt-2 text-center">@ChildContent</div>
    </div>
</div>

@code {

    string myStuff = "horse";

    private string CssClass { get; set; } = "circle";

    protected void PictureClick(MouseEventArgs e)
    {
        CssClass = CssClass == "circle" ? null : "circle";
    }
}